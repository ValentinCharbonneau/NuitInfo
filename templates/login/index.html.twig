{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<div class="container pt-3 mt-lg-5 col-lg-5 mx-auto">
    <form action="{{ path('app_home') }}" method="post">
        <div class="card bg-dark shadow">
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">se déconnecter</a>.
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

                <hr>

                <label for="username">Nom d'utilisateur</label>
                <input type="text" value="{{ last_username }}" name="username" id="username" class="form-control" required autofocus>
                
                <label class="mt-2" for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>

                <div class="checkbox my-3 row">
                    <label class="col">
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                    <div class="col-12 col-lg"></div>
                    <p class="col text-muted my-auto">Pas encore inscrit ? <a href={{ path("app_register") }} class="link-info">Rejoignez-nous.</a></p>
                </div>

                <button class="btn btn-lg btn-primary" type="submit">
                    Connexion
                </button>
            </div>
        </div>
    </form>
</div>
{% endblock %}
