{% extends 'base.html.twig' %}

{% block title %}MST index{% endblock %}

{% block body %}
    <h1>MST index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Mortality</th>
                <th>Transmission</th>
                <th>Symptom</th>
                <th>Treatment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for m_s_t in m_s_ts %}
            <tr>
                <td>{{ m_s_t.id }}</td>
                <td>{{ m_s_t.name }}</td>
                <td>{{ m_s_t.description }}</td>
                <td>{{ m_s_t.mortality }}</td>
                <td>{{ m_s_t.transmission }}</td>
                <td>{{ m_s_t.symptom }}</td>
                <td>{{ m_s_t.treatment }}</td>
                <td>
                    <a href="{{ path('app_m_s_t_show', {'id': m_s_t.id}) }}">show</a>
                    <a href="{{ path('app_m_s_t_edit', {'id': m_s_t.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_m_s_t_new') }}">Create new</a>
{% endblock %}
