{% extends 'base.html.twig' %}

{% block title %}Cards index{% endblock %}

{% block body %}
    <h1>Cards index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for card in cards %}
            <tr>
                <td>{{ card.id }}</td>
                <td>
                    <a href="{{ path('app_cards_show', {'id': card.id}) }}">show</a>
                    <a href="{{ path('app_cards_edit', {'id': card.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cards_new') }}">Create new</a>
{% endblock %}
